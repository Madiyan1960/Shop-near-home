<div id="cart">
  <h3>üõí –ö–æ—Ä–∑–∏–Ω–∞</h3>
  <ul id="cart-items"></ul>
  <p><strong>–ò—Ç–æ–≥–æ:</strong> <span id="total">0</span> ‚Ç∏</p>
  <button class="btn" onclick="showOrderForm()">–û—Ñ–æ—Ä–º–∏—Ç—å –∑–∞–∫–∞–∑</button>
</div>

<div id="order-form">
  <h3>üìã –û—Ñ–æ—Ä–º–ª–µ–Ω–∏–µ –∑–∞–∫–∞–∑–∞</h3>
  <input type="text" id="name" placeholder="–í–∞—à–µ –∏–º—è">
  <input type="text" id="phone" placeholder="–¢–µ–ª–µ—Ñ–æ–Ω">
  <textarea id="address" placeholder="–ê–¥—Ä–µ—Å –¥–æ—Å—Ç–∞–≤–∫–∏"></textarea>
  <button class="btn" onclick="submitOrder()">–û—Ç–ø—Ä–∞–≤–∏—Ç—å</button>
</div>

<script>
  const cart = [];

  function addToCart(name, price) {
    cart.push({ name, price });
    updateCart();
  }

  function updateCart() {
    const cartList = document.getElementById('cart-items');
    cartList.innerHTML = '';
    let total = 0;
    cart.forEach(item => {
      const li = document.createElement('li');
      li.textContent = `${item.name} - ${item.price} ‚Ç∏`;
      cartList.appendChild(li);
      total += item.price;
    });
    document.getElementById('total').textContent = total;
  }

  function showOrderForm() {
    if (cart.length === 0) {
      alert("–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞!");
      return;
    }
    document.getElementById('order-form').style.display = 'block';
  }

  function submitOrder() {
    const name = document.getElementById('name').value.trim();
    const phone = document.getElementById('phone').value.trim();
    const address = document.getElementById('address').value.trim();

    if (!name || !phone || !address) {
      alert("–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è.");
      return;
    }

    let message = `üõí –ù–æ–≤—ã–π –∑–∞–∫–∞–∑:\n–ò–º—è: ${name}\n–¢–µ–ª–µ—Ñ–æ–Ω: ${phone}\n–ê–¥—Ä–µ—Å: ${address}\n\n`;
    cart.forEach(item => {
      message += `‚Ä¢ ${item.name} - ${item.price} ‚Ç∏\n`;
    });
    message += `\n–ò—Ç–æ–≥–æ: ${document.getElementById('total').textContent} ‚Ç∏`;

    alert("–ó–∞–∫–∞–∑ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω!\n\n" + message);
    // –ú–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –æ—Ç–ø—Ä–∞–≤–∫—É –≤ Telegram, Google Sheets –∏ —Ç.–¥.
  }
</script>

